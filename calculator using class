#include<iostream>
using namespace std;
class calculator
{
    public:
    int add(int x,int y)
    {
        return x+y;
    }
    int sub(int x,int y)
    {
        return x-y;
    }
    int mul(int x,int y)
    {
        return x*y;
    }
    int div(int x,int y)
    {
        return x/y;
    }
};
int main()
{
    int firstnum,secondnum;
    calculator c;
    cout<<"enter the first number:";
    cin>>firstnum;
    cout<<"enter the second number:";
    cin>>secondnum;
    cout<<"firstnum+secondnum="<<c.add(firstnum,secondnum);
    cout<<"\nfirstnum-secondnum="<<c.sub(firstnum,secondnum);
    cout<<"\nfirstnum*secondnum="<<c.mul(firstnum,secondnum);
    cout<<"\nfirstnum/secondnum="<<c.div(firstnum,secondnum);
}
